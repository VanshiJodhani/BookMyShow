<%= form_with model: @event, :class => "form" do |f| %>

<%= f.label :name, 'Event Name' %>
<%= f.text_field :name %>

<% @event.errors.full_messages_for(:name).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.label :category %>
<%=  collection_select( :event, :category_id , Category.all, :id, :name) %>
<% @event.errors.full_messages_for(:category).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.label :start_time %>
<%= f.datetime_field :start_time %>
<% @event.errors.full_messages_for(:start_time).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.label :end_time %>
<%= f.datetime_field :end_time %>
<% @event.errors.full_messages_for(:end_time).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.label :city %>
<%= f.select(:city_id, City.all.collect {|c| [c.name, c.id]}, {}) %>
<% @event.errors.full_messages_for(:city).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.label :location %>
<%= f.select(:location_id, Location.all.collect {|l| [l.name, l.id]}, {}, disabled: true) %>
<% @event.errors.full_messages_for(:location).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.submit "Create", :class => "button" %>
<% end %>
</div>
