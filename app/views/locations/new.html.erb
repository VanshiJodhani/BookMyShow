<%= form_with model: @location, :class => "form" do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<% @location.errors.full_messages_for(:name).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.label :address %>
<%= f.text_field :address %>
<% @location.errors.full_messages_for(:address).each do |message| %>
<div class="error"><%= message %></div>
<% end %><br><br>

<%= f.label :city %>
<%=  collection_select( :location, :city_id , City.all, :id, :name) %>
<% @location.errors.full_messages_for(:city).each do |message| %>
<div class="error"><%= message %></div>
<% end %><br><br>

<%= f.label :capacity %>
<%= f.text_field :capacity %>
<% @location.errors.full_messages_for(:capacity).each do |message| %>
<div class="error"><%= message %></div>
<% end %><br><br>

<%= f.submit "Create", :class => "button" %>
<% end %>
</div>
