<h1>Select categoty</h1>

<%= form_with model: @category, :class => "form" do |f| %>

<%= f.label :name %>

<%= f.select :name, [['Movie', 'Movie'], ['Sports', 'Sports'], ['Music', 'Music'], ['Stand-up', 'Stand-up']] %>

<% @category.errors.full_messages_for(:name).each do |message| %>
<div class="error"><%= message %></div>
<% end %> <br><br>

<%= f.submit "Create", :class => "button" %>
<% end %>
